<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddSkillActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Skill"
        android:textFontWeight="700"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/darkslateblue" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        android:id="@+id/inputSkillName"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/primaryvariant2"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtSkillName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bg"
            android:hint="Skill Name"
            android:backgroundTint="@color/primaryvariant2"
            android:gravity="top" />


    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/inputDescription"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/primaryvariant2"
        android:lines="5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bg"
            android:hint="Description"
            android:backgroundTint="@color/primaryvariant2"
            android:gravity="top"
            android:lines="5" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="18dp"
        android:text="Add Skill" />

</LinearLayout>